<div class="container-fluid  pt-5 mb-5">
 
	<%= link_to ' < Back', photos_path, class: 'btn btn-outline-dark m-5' %>  
 
  <div class="card text-info bg-light col-sm-12 col-md-8 offset-md-1" >
	<div class="card-body ">
		<p id="notice"><%= notice %></p>
		<%= link_to 'Edit', edit_photo_path(@photo), class: 'card-link btn btn-outline-dark  float-md-right' %>
		<h5 class="card-title"><%= @photo.name %></h5>
		<p class="card-text"><strong class="mr-2">Description: </strong> <%= @photo.description %></p>
		<p class="card-text"><strong class="mr-2">Location:</strong><%= @photo.image.url %></p>
		<%= image_tag @photo.image.url, class:"card-img" %> 
	</div> 
	<div class="card-footer">Created by: <%= @photo.user_id %></small>
    </div>
  </div>
</div>

 
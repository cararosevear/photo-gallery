 
 <h2 class="m-5">Add New Photo</h2>
 <div id="container" class="container m-5 form">
	<div class="row">
		<div class="col-sm-12 offset-md-2 col-md-8">
		  <%= form_for @photo, html: { multipart: true }  do |f| %>
			  <% if @photo.errors.any? %>
				<div id="error_explanation">
				  <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>
			 
				  <ul>
				  <% @photo.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				  <% end %>
				  </ul>
				</div>
			  <% end %>
			   <div class="form-group">
					<%= label_tag :name, 'Title' %>
					<%= text_field_tag :name, nil, class: 'form-control', id: 'name', placeholder: 'please enter a Title' %>
					<small id="titleHelp" class="form-text text-muted">Title of Photo to upload.</small>
				</div>
		 
				<div class="form-group">
					<%= label_tag :description, 'Decscription' %>
					<%=  text_area :description, nil, class: 'form-control', id: 'description', placeholder: 'please enter a Description' %>
					<small id="titleHelp" class="form-text text-muted">Enter a description of your photo.</small>
			  </div>
			  
			 <div class="form-group">
				<%= label_tag :image, 'Image' %>
				<%= image_tag(@photo.image_url, class: 'img-fluid') if @photo.image? %>
				<span class="fileinput-button"> <%=  f.file_field :image %> </span>
			 
			 
			  <% if f.object.image? %>
				  <%= f.label :remove_image %>
				  <%= link_to 'Destroy', photo, method: :delete, class:"btn", data: { confirm: 'Are you sure?' } %>
				<% end %>
			  </div>
			  
			  <div class="form-group">
				  <div class="field">
					<%= f.label :user_id %>
					<%= f.number_field :user_id %>
				  </div>
			</div>
			 <div class="form-group">
				<div class="actions">
					<%= f.submit class: 'btn btn-primary'%>
				</div>
			</div>	
		<% end %>
	</div>
</div>	
 
</div>